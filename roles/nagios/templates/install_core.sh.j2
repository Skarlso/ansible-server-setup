# Install Nagios Core
cd {{home_dir}}
curl -L -O https://assets.nagios.com/downloads/nagioscore/releases/nagios-{{nagios_core_version}}.tar.gz
tar xvf nagios-{{nagios_core_version}}.tar.gz
cd nagios-{{nagios_core_version}}

./configure --with-command-group=nagios --with-htmurl=/ --with-cgiurl=/cgi-bin
make all
make install
make install-commandmode
make install-init
make install-config
